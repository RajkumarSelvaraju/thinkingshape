<div class="container-fluid">
    <div class="row">
        <div class="col-lg-offset-1 col-lg-10">
            <div class="page-header">
                <h1><small>Order Information</small></h1>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-offset-2 col-lg-5">
            <div class="modal-body">
                <div class="form-group">
                  <p><label>Order Name:</label>
                  <%= @orders.name %></p>
                </div>
                <div class="form-group">
                  <p><label>PO Number:</label>
                  <%= @orders.po_no %></p>
                </div>
                <div class="form-group">
                  <p><label>PO Date:</label>
                  <%= @orders.po_date %></p>
                </div>
                <div class="form-group">
                  <p><label>Due Date:</label>
                  <%= @orders.due_date %></p>
                </div>
            </div>
            <div class="modal-footer">
                <%= link_to 'Back', orders_path, class: "btn btn-primary" %>
                <%= link_to "Edit", edit_order_path(@orders), class: "btn btn-warning" %>
            </div>
        </div>
    </div>
</div>